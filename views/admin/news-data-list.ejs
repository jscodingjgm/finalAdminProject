<h2>User List</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Published At</th>
        <th>Edit/ Delete</th>
      </tr>
    </thead>
    <tbody>
      <% news.forEach(function(elem, index) { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= elem.title %></td>
        <td><%= elem.description %></td>
        <td><%= elem.date %></td>
        <td>
          <a href="/admin/editnews/<%= elem._id%>">Edit</a>&nbsp;
          <a href="/admin/deleteNews/<%= elem._id%>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>