<form class="border border-primary shadow p-3 mb-5 bg-white" name="loginForm" method="POST" action="/api/news/saveNews">
    <div class="form-group">
        <label for="exampleInputEmail1"><h2>Add News</h2></label>
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" aria-describedby="email">
        <!-- <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
    <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" name="description"></textarea>
        <!-- <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" name="category">
    </div>
    <div class="form-group">
        <label for="url">Url</label>
        <input type="text" class="form-control" name="url">
    </div>
    <div class="form-group">
        <label for="image">Url to Image</label>
        <input type="text" class="form-control" name="image">
    </div>
    <div class="form-group">
        <label for="author">Published At</label>
        <input type="text" class="form-control" name="author">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>